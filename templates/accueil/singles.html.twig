{% extends 'base.html.twig' %}

{% block title %} Market {% endblock %}

{% block body %}
    <!-- ============================================-->
    <!-- <section> begin ============================-->
    <section class="pt-0 pb-0">
    <div class="container-small">
    <h2 class="mb-0">Les Singles </h2>
    <div class="row gx-3 gy-5">
      {%  for single in singles %}
                {# SINGLE #}
                <div class="col-6 col-sm-4 col-md-3 col-lg-2 hover-actions-trigger btn-reveal-trigger">
                  <div class="d-flex flex-center rounded-3 " style="height:180px;">
                        <a href="{{ path('single', {'id' : single.id }) }}"><img class="mw-100 rounded-2" src=" {{ asset('upload/singlesImages/'~single.img) }} " alt="Dell Technologies" height="height" /> </a>
                  </div>
                  <div class="d-flex align-items-center">
                    <span class="nav-link-text-wrapper">
                          <a href="{{ path('single', {'id' : single.id }) }}" class="text-dark hover-text-decoration-none">
                              <h5 class="nav-link-text">{{ single.titre}} </h5>
                          </a>
                          <a class="btn btn-link p-0 text-decoration-none"  href="">{{ single.user }}</a>
                    </span>
                  </div>
                </div>
      {% endfor %}
    </div>
    </div><!-- end of .container-->
    </section><!-- <section> close ============================-->
    <!-- ============================================-->
{% endblock %}
